<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/saveFileIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/savefile256" />

    <TextView
        android:id="@+id/saveFileTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/saveFileIV"
        android:gravity="center"
        android:text="Save File To:"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/saveFileTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveFileTitle"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/saveFileTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveFileTV1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:text="Save As:" />

    <EditText
        android:id="@+id/saveFileET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveFileTV2"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveFileET"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/saveFileOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btnblk"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/saveFileCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btnblk"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="Cancel"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>
