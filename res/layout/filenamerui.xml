<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|left"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/filenmrTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/filenmrTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:clickable="false"
        android:focusable="false"
        android:text="TextView"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/fileNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz1234567890_-"
        android:ems="10"
        android:lines="1"
        android:maxLength="24"
        android:singleLine="true"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/fnmrSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/btnblk"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="OK"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/fnmrCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/btnblk"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="Cancel"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>