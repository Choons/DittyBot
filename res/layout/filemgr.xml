<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filemgrRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/fmgrbodyRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/fmgrmenuLL"
        android:background="@color/gunmetal" >
        
	    <LinearLayout
	        android:id="@+id/fmgrBreadCrLL"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >	
	    </LinearLayout>
	
	    <GridView
	        android:id="@+id/filemgrGV"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/fmgrBreadCrLL"
	        android:layout_margin="5dp"
	        android:clickable="true"
	        android:columnWidth="80dp"
	        android:drawSelectorOnTop="true"
	        android:focusable="true"
	        android:gravity="center"
	        android:numColumns="auto_fit"
	        android:paddingBottom="4dp"
	        android:stretchMode="columnWidth"
	        android:verticalSpacing="5dp" >

	    </GridView>
	
	    <TextView
	        android:id="@+id/filemgrTV"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="TextView"
	        android:visibility="gone" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/fmgrmenuLL"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
	    
        <LinearLayout
            android:id="@+id/fmgrmainmenuLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/filemoveIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/menugrn256" />

            <TextView
                android:id="@+id/saveFileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Main" />

    	</LinearLayout>

        <LinearLayout
            android:id="@+id/fmgrdirupLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dirup256" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Up" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fmgrnewfLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/folderadd256" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fmgrsaveLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/savefile256" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Save" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
