<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radioBtnsRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/radioBtnsLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/radioBtnsIV"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/radioBtnsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioBtnsRG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioBtnsLL"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <RadioButton
            android:id="@+id/radioBtnsRB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="___Option 1"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioBtnsRB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:checked="false"
            android:text="___Option 2" />

        <RadioButton
            android:id="@+id/radioBtnsRB3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="___Option 3" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioBtnsRG"
        android:layout_centerInParent="true" >

        <Button
            android:id="@+id/radioBtnsOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/btnblk"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="OK"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/radioBtnsCncl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/btnblk"
            android:minHeight="50dp"
            android:minWidth="80dp"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>